generator client {
  provider     = "prisma-client"
  output       = "../src/generated/prisma"
  moduleFormat = "cjs"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            Int             @id @default(autoincrement())
  username      String
  password      String
  searchHistory SearchHistory[]
}

model SearchHistory {
  id         Int    @id @default(autoincrement())
  ip_address String
  user       User?  @relation(fields: [userId], references: [id])
  userId     Int?
}
